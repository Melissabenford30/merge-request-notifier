{
  "name": "merge-request-notifier",
  "version": "0.8.4",
  "description": "This app shows your merge requests grouped by projects and WIP status. It is accessible from the system tray.",
  "main": "./dist/main.js",
  "engines": {
    "yarn": "1.19.1"
  },
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "yarn clean && yarn build-main && yarn build-renderer",
    "clean": "rm -rf dist && rm -rf release",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "start": "cross-env START_HOT=1 yarn start-renderer-dev",
    "prestart": "yarn build",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "test": "jest '(\\/test\\/(?<!e2e/)).*'",
    "pretest:e2e": "yarn build",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "package": "electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps",
    "prettier:check": "prettier --check 'src/**/*.ts*'",
    "prettier:write": "prettier --write 'src/**/*.ts*'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
    }
  },
  "build": {
    "productName": "Merge Request Notifier",
    "appId": "de.codecentric.ruettenm.mergeRequestNotifier",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "scripts/notarize.js",
    "dmg": {
      "sign": false
    },
    "publish": [
      "github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:codecentric/merge-request-notifier.git"
  },
  "author": {
    "name": "Matthias RÃ¼tten",
    "email": "matthias.ruetten@codecentric.de"
  },
  "homepage": "https://github.com/codecentric/merge-request-notifier",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "@hot-loader/react-dom": "^16.8.6",
    "@material-ui/core": "^4.4.2",
    "@material-ui/icons": "^4.2.1",
    "@rebass/forms": "^4.0.5",
    "@rebass/preset": "^4.0.5",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-router-dom": "^5.1.0",
    "@types/react-test-renderer": "^16.8.1",
    "@types/rebass": "^4.0.0",
    "@types/superagent": "^4.1.3",
    "@types/webdriverio": "^5.0.0",
    "@types/webpack-env": "^1.13.3",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "electron": "^7.0.0",
    "electron-builder": "^22.1.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^3.0.8",
    "electron-notarize": "^0.2.0",
    "electron-unhandled": "^3.0.0",
    "electron-updater": "^4.2.0",
    "electron-util": "^0.12.2",
    "emotion-theming": "^10.0.18",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "image-webpack-loader": "^6.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.5",
    "moment": "^2.24.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.8.8",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.8.6",
    "rebass": "^4.0.5",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "spectron": "^9.0.0",
    "style-loader": "^1.0.0",
    "superagent": "^5.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typeface-ibm-plex-mono": "^0.0.61",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  }
}
